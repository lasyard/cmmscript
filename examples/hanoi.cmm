/* hanoi.cmm */

/* lasy */
/* 2004.12.28 */

n ?: n = 5 $

fstk = tstk = rstk = @
p = 0; f = 0; t = 1; r = 0
step = 0

{{{ n > 0 && r == 0 ?:#$
	fstk[p] = f; tstk[p] = t; rstk[p] = 1; ++p
	--n; t = 3-f-t; r = 0
} n > 0 && r == 1 ?:#$
	++step; _p("Step", step, ":")
	_p("Move disk", n, "from", f, "to", t); _pln()
	fstk[p] = f; tstk[p] = t; rstk[p] = 2; ++p
	--n; f = 3-f-t; r = 0
} --p; p >= 0 ?:#$ f = fstk[p]; t = tstk[p]; r = rstk[p]; ++n }
